{
  "name": "@joshua2048/threads-cli",
  "version": "1.0.0",
  "description": "Conversational thread tracker for managing streams of activity through self-reported progress",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "threads": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "prepublishOnly": "npm run build && npm test",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "threads",
    "productivity",
    "cli",
    "tracker",
    "task",
    "progress",
    "activity",
    "todo",
    "workflow"
  ],
  "author": "Joshua Ramirez",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshuaramirez/threads-cli.git"
  },
  "bugs": {
    "url": "https://github.com/joshuaramirez/threads-cli/issues"
  },
  "homepage": "https://github.com/joshuaramirez/threads-cli#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^14.0.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
