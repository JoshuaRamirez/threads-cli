{
  "name": "@redjay/threads",
  "version": "1.2.0",
  "description": "Entry point composition package for Threads CLI - wires together CLI + storage based on config",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "threads": "./dist/index.js",
    "threads-mcp": "./dist/mcp.js",
    "threads-migrate": "./dist/migrate.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "threads",
    "cli",
    "productivity",
    "tracker",
    "activity",
    "progress"
  ],
  "author": "Joshua Ramirez",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoshuaRamirez/threads-cli.git",
    "directory": "packages/threads"
  },
  "bugs": {
    "url": "https://github.com/JoshuaRamirez/threads-cli/issues"
  },
  "homepage": "https://github.com/JoshuaRamirez/threads-cli#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@redjay/threads-cli": "workspace:*",
    "@redjay/threads-core": "workspace:*",
    "@redjay/threads-json-storage": "workspace:*",
    "@redjay/threads-mcp": "workspace:*",
    "@redjay/threads-storage": "workspace:*"
  },
  "optionalDependencies": {
    "@redjay/threads-firebase-storage": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  }
}
